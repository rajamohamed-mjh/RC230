<% title "New Review for #{@product.name}" %>

<%= form_for [@product, @review] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :rows => 10, :cols => 40 %>
  </p>
  <p>
    <%= f.label :rating %><br />
    <%= f.select :rating, 1..5 %>
  </p>
  <p><%= f.submit %></p>
<% end %>


<p><%= link_to "Back to Reviews", product_reviews_path(@product) %></p>
