<% title "Products" %>

<% for product in @products %>
  <div class="product">
    <h2><%= product.name %></h2>
    <div class="details">
      Price: <%= number_to_currency(product.price) %> |
      <%= link_to "Read Reviews", product_reviews_path(product) %>
    </div>
    <p id="pdf_link">
  <%= link_to "Download Invoice (PDF)", product_path(product, :format => "pdf") %>
</p>

  </div>
<% end %>

<p><%= link_to "New Product", new_product_path %></p>
